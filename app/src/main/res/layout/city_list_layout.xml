<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true">

    <com.example.cxcxk.android_my_library.view.actionbar.ActionBar
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.example.cxcxk.android_my_library.view.actionbar.ActionBar>

    <com.example.cxcxk.android_my_library.view.actionbar.SearchView
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginLeft="@dimen/fab_margin"></com.example.cxcxk.android_my_library.view.actionbar.SearchView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginTop="32dp">
        <TextView
            android:id="@+id/beijing"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/city_shape"
            android:text="北京"
            android:layout_marginRight="8dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tianjin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/city_shape"
            android:text="天津"
            android:layout_marginRight="8dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/shanghai"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/city_shape"
            android:text="上海"
            android:layout_marginRight="8dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/chongqing"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/city_shape"
            android:text="重庆"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginTop="@dimen/fab_margin">
        <TextView
            android:id="@+id/aomen"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/city_shape"
            android:layout_height="wrap_content"
            android:text="澳门"
            android:layout_marginRight="8dp"/>
        <TextView
            android:id="@+id/xianggang"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/city_shape"
            android:layout_height="wrap_content"
            android:text="香港"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ListView
        android:id="@+id/city_province"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>
</LinearLayout>